<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/item_recording_top_layout"
        android:layout_width="match_parent"
        android:background="@color/bg_view"
        android:gravity="center_vertical"
        android:layout_height="36dp">
        <TextView
            android:id="@+id/item_recording_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_two"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_recording_title"
                android:text="@string/campus_card_rechage"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textSize="18sp"
                android:textColor="@color/txt_one"
                android:gravity="bottom"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/item_recharge_time_mon"
                android:textSize="16sp"
                android:textColor="@color/txt_three"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="top"
                android:layout_marginTop="2dp"
                android:layout_weight="1"/>

        </LinearLayout>
        <TextView
            android:id="@+id/item_recharge_value"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/code_get"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
</LinearLayout>