<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include layout="@layout/top_title_style"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.klcxkj.reshui.widget.ClearEditText
            android:id="@+id/room_search"
            android:background="@drawable/search_style"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="12dp"
            android:drawablePadding="10dp"
            android:textSize="16sp"
            android:drawableStart="@drawable/login_search_icon"
            android:hint="输入楼栋名查询"
            android:layout_height="42dp"
            android:paddingLeft="12dp"
            android:drawableLeft="@drawable/login_search_icon"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_search_icon"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:paddingLeft="15dip"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg_view"/>

    <TextView
        android:id="@+id/room_address"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical|left"
        android:paddingLeft="15dp"
        android:textColor="@color/txt_one"
        android:textSize="16sp"
        android:text="当前:"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/btn_text"/>
    <ListView
        android:id="@+id/list_room"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:divider="@color/bg_view"
        android:dividerHeight="1px"
        android:overScrollMode="never"
        android:listSelector="@android:color/transparent"
        android:background="@color/white"/>
</LinearLayout>
