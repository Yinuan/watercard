<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- base顶部整体tab -->
    <style name="top_btn">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/btn_back_style</item>
    </style>
    <!-- base顶部左右两侧text -->
    <style name="top_btn_text">
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_width">10dp</item>
        <item name="android:background">@drawable/title_back_press</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!-- loading_dialog加载对话框 -->
    <style name="Custom_Progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--自助申卡的字体风格-->
    <style name="label">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/label_light</item>
        <item name="android:paddingTop">1dip</item>
        <item name="android:paddingBottom">1dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="input_fullline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--自助申卡-->
    <style name="input_fullline_bg_while">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dip</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorHint">@color/txt_three</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
